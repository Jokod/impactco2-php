{
    "name": "jokod/impactco2-php",
    "description": "Client PHP pour l'API Impact CO2",
    "type": "library",
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^2.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Jokod\\Impactco2Php\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jokod\\Impactco2Php\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "static-analysis": "phpstan analyse src tests --level=max"
    }
}
